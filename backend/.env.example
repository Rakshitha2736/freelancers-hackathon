# ============================================
# Database Configuration
# ============================================
MONGO_URI=mongodb://localhost:27017/freelancers_hackathon

# ============================================
# Authentication & Security
# ============================================

# JWT secret for access token signing (required)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# JWT secret for refresh token signing (optional, defaults to JWT_SECRET if not set)
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production

# Secret for signing cookies (required)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
COOKIE_SECRET=your_super_secret_cookie_key_change_this_in_production

# ============================================
# Server Configuration
# ============================================

# Backend server port
PORT=3001

# Environment: development, staging, or production
NODE_ENV=development

# ============================================
# Frontend Configuration
# ============================================

# Frontend client URL for CORS and Socket.io
CLIENT_URL=http://localhost:3000

# Frontend URL used in emails/links
FRONTEND_URL=http://localhost:3000

# ============================================
# AI Services
# ============================================

# Google Gemini API key (for AI features)
# Free tier: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIzaSyCg2v6Yjg2Y63cmYVdf3SDir1qAaFmi8Zw

# ============================================
# Optional API Security
# ============================================

# API key for internal service-to-service API calls
API_KEY=your_api_key_for_internal_services

# ============================================
# Email Configuration (Optional)
# ============================================

# Email service provider (gmail, outlook, etc.)
EMAIL_SERVICE=gmail

# Email service username/email
EMAIL_USER=your-email@gmail.com

# Email service password/app-password
EMAIL_PASSWORD=your_app_password

# ============================================
# Security Notes
# ============================================

# For production:
# 1. Set NODE_ENV=production
# 2. Use strong random values for all SECRET variables
# 3. Enable HTTPS/TLS
# 4. Set secure cookie flags
# 5. Configure MONGO_URI for cloud database
# 6. Implement database encryption at rest
# 7. Set up regular backups
# 8. Enable audit logging monitoring
